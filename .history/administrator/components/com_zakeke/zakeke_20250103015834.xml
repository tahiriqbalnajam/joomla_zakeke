<?xml version="1.0" encoding="UTF-8"?>
<extension type="component" method="upgrade">
    <name>com_zakeke</name>
    <version>2.0.2</version>
    <description>Component to manage Zakeke tasks</description>
    <author>Tahir Iqbal</author>
    <creationDate>December 2024</creationDate>
    <license>GNU General Public License version 3 or later; see LICENSE.txt</license>
    <namespace path="src">Zakeke\Component\Tasks</namespace>
    <administration>
        <menu>Zakeke</menu>
        <submenu>
            <menu link="option=com_zakeke&amp;view=config">Configuration</menu>
        </submenu>
        <files folder="administrator/components/com_zakeke">
            <folder>services</folder>
            <folder>src</folder>
            <folder>forms</folder>
            <folder>sql</folder>
            <folder>tmpl</folder>
            <filename>default.php</filename>
        </files>
    </administration>
    <media destination="com_zakeke" folder="media/com_zakeke">
        <folder>js</folder>
        <filename>joomla.asset.json</filename>
    </media>
</extension>