<?xml version="1.0" encoding="UTF-8"?>
<extension type="template" client="site" method="upgrade">
	<name>VM Basic</name>
	<version>4.2.18</version>
	<creationDate>16-06-2024</creationDate>
	<author>Spiros Petrakis</author>
	<authorEmail>support@yourgeek.gr</authorEmail>
	<copyright>(C) 2024 Spiros Petrakis</copyright>
	<description>TPL_VMBASIC_XML_DESCRIPTION</description>
	<inheritable>1</inheritable>
	<files>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>joomla.asset.json</filename>
		<filename>offline.php</filename>
		<filename>templateDetails.xml</filename>
		<folder>html</folder>
		<folder>language</folder>
	</files>
	<media destination="templates/site/vmbasic" folder="media">
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
	</media>
	<positions>
		<position>topbarleft</position>
		<position>topbar</position>
		<position>languages</position>
		<position>currencies</position>
		<position>cart</position>
		<position>login</position>
		<position>menu</position>
		<position>search</position>
		<position>breadcrumbs</position>
		<position>banner-1</position>
		<position>banner-2</position>
		<position>banner-3</position>
		<position>top-1</position>
		<position>top-2</position>
		<position>top-3</position>
		<position>top-4</position>
		<position>main-top</position>
		<position>main-bottom</position>
		<position>sidebar-left</position>
		<position>sidebar-right</position>
		<position>bottom-1</position>
		<position>bottom-2</position>
		<position>bottom-3</position>
		<position>bottom-4</position>
		<position>footer</position>
		<position>copyright</position>
		<position>debug</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_vmbasic.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_vmbasic.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="configuration">
				<field
					name="logoFile"
					type="media"
					default=""
					label="TPL_VMBASIC_LOGO_LABEL"
				/>
				<field name="footerlogo" type="radio" class="btn-group btn-group-yesno" default="1" label="TPL_VMBASIC_FOOTERLOGO" description="TPL_VMBASIC_FOOTERLOGO_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="backTop" type="radio" class="btn-group btn-group-yesno" default="0" label="TPL_VMBASIC_BACKTOP" description="TPL_VMBASIC_BACKTOP_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
			<fieldset name="fonts" label="Google fonts">
				<field
				name="gfonts"
				type="textarea"
				default=""
				label="TPL_VMBASIC_GOOGLE_FONTS"
				description="TPL_VMBASIC_GOOGLE_FONTS_DESC"
				rows="5"
				cols="50"
				filter="raw"
				>
				</field>
				<field name="bodyfontfamily" type="textarea" default="" label="TPL_VMBASIC_BODY_FONT" description="TPL_VMBASIC_BODY_FONT_DESC" filter="string" hint="font-family: 'Roboto', sans-serif;">
				</field>
				<field name="headingsfontfamily" type="textarea" default="" label="TPL_VMBASIC_HEADER_FONT" description="TPL_VMBASIC_HEADER_FONT_DESC" filter="string" hint="font-family: 'Roboto', sans-serif;">
				</field>
			</fieldset>
			<fieldset name="customcode" label="Custom code">
				<field name="customcss" type="radio" class="btn-group btn-group-yesno" default="0" label="TPL_VMBASIC_CUSTOMCSS" description="TPL_VMBASIC_CUSTOMCSS_DESC">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field name="inlinecustomcss" type="textarea" default="" class="span6" label="TPL_VMBASIC_INLINE_CSS" description="TPL_VMBASIC_INLINE_CSS_DESC" rows="10" cols="50"
					filter="raw" />
				<field name="headcustomjs" type="textarea" default="" class="span6" label="TPL_VMBASIC_JS_HEAD" description="TPL_VMBASIC_JS_HEAD_DESC" rows="10" cols="50" filter="raw" />
				<field name="bodycustomjs" type="textarea" default="" class="span6" label="TPL_VMBASIC_JS_BODY" description="TPL_VMBASIC_JS_BODY_DESC" rows="10" cols="50" filter="raw" />
			</fieldset>
		</fields>
	</config>
</extension>